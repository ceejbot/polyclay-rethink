{
  "name": "polyclay-rethink",
  "description": "rethinkdb backing storage for polyclay models",
  "version": "0.1.2",
  "author": "C J Silverio <ceejceej@github.com>",
  "bugs": {
    "url": "https://github.com/ceejbot/polyclay-rethink/issues"
  },
  "config": {
    "blanket": {
      "pattern": "index.js",
      "data-cover-never": [
        "node_modules",
        "test"
      ],
      "output-reporter": "spec",
      "travis-cov": {
        "threshold": 90
      }
    }
  },
  "dependencies": {
    "async": "~1.4.2",
    "lodash": "~3.3.1",
    "p-promise": "~0.5.0",
    "polyclay": "~1.7.2",
    "rethinkdb": "~2.1.0"
  },
  "devDependencies": {
    "blanket": "~1.1.7",
    "jscs": "~2.1.0",
    "jshint": "~2.8.0",
    "lodash": "~3.10.1",
    "mocha": "~2.2.5",
    "mocoverage": "~1.0.0",
    "must": "~0.12.0",
    "polyclay": "~1.7.1",
    "travis-cov": "~0.2.5"
  },
  "homepage": "https://github.com/ceejbot/polyclay-rethink",
  "keywords": [
    "mapper",
    "odm",
    "polyclay",
    "rethinkdb"
  ],
  "license": "ISC",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ceejbot/polyclay-rethink.git"
  },
  "scripts": {
    "lint": "jshint index.js test/test-rethink.js && jscs  index.js test/test-rethink.js",
    "test": "mocha -t 5000 --check-leaks --ui exports --require blanket -R mocoverage test/test-*.js",
    "test-cov": "mocha -t 10000 --require blanket -R travis-cov test/test-*.js",
    "test-travis": "mocha -R spec -t 10000 test/test-*.js && npm run test-cov && npm run lint"
  }
}
